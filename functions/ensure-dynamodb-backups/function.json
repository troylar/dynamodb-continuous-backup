{
    "name": "Continuous DynamoDB Backup",
    "runtime": "python2.7",
    "memory": 128,
    "timeout": 30,
    "hooks": {
        "build": "pip install -r requirements.txt -t ."
    },
    "environment": {
        "FIREHOSE_DELIVERY_BUCKET": "test_bucket",
        "FIREHOSE_DELIVERY_PREFIX": "dynamodb/backup",
        "FIREHOSE_DELIVERY_ROLE_ARN": "arn:aws:iam::<my account number>:role/firehose_delivery_role",
        "FIREHOSE_DELIVERY_SIZE_IN_MB": "128",
        "FIREHOSE_DELIVERY_INTERVAL_SECONDS": "60",
        "LAMBDA_EXEC_ROLE_ARN": "arn:aws:iam::<my account number>:role/LambdaExecRole",
        "CLOUD_WATCH_ROLE_ARN": "arn:aws:iam::<my account number>:role/CloudWatchEventsRole",
        "STREAM_MAX_RECORDS_BATCH": "1000",
        "TABLE_NAME_MATCH_REGEX": "*"
    }
}
